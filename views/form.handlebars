
<form action="/waiters/{{name}}" method="post">
<center><h1>Waiters App</h1></center>
<label><input name="workdays" type="checkbox" {{#if days.Monday}} checked {{/if}} value="Monday">Monday</label>
<label><input name="workdays" type="checkbox" {{#if days.Tuesday}} checked {{/if}} value="Tuesday">Tuesday</label>
<label><input name="workdays" type="checkbox"{{#if days.Wednesday}} checked {{/if}} value="Wednesday">Wednesday</label>
<label><input name="workdays" type="checkbox"{{#if days.Thursday}} checked {{/if}} value="Thursday">Thursday</label>
<label><input name="workdays" type="checkbox"{{#if days.Friday}} checked {{/if}} value="Friday">Friday</label><br><br>
<label><input type="submit" id="button" value="Submit" name="button"></input></label>
</form><br><br><br>

<div id="display">{{name}}</div>
